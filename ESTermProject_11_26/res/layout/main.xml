<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_margin="5dip">
        <TextView android:layout_height="wrap_content" android:text="@string/numOfArr" android:id="@+id/textView1" android:layout_width="wrap_content"></TextView>
        <Spinner android:layout_height="60dip" android:layout_width="100dip" android:id="@+id/spinner1"></Spinner>
        <Button android:text="@string/createArr" android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/createBtn"></Button>
    </LinearLayout>
    <TextView android:text="__" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dip" android:id="@+id/elementList"></TextView>
    <TextView android:layout_height="wrap_content" android:text="@string/resultOfSum" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_margin="5dip"></TextView>
    <EditText android:hint="@string/resultOfSumHint" android:layout_width="match_parent" android:layout_height="60dip" android:id="@+id/inputValue" android:layout_margin="5dip"></EditText>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="match_parent">
        <Button android:layout_height="60dip" android:text="@string/confirm" android:layout_width="wrap_content" android:id="@+id/confirmBtn" android:layout_margin="5dip"></Button>
        <Button android:layout_height="60dip" android:text="@string/clear" android:layout_width="wrap_content" android:id="@+id/clearBtn" android:layout_margin="5dip"></Button>
    </LinearLayout>
    <TextView android:layout_height="wrap_content" android:id="@+id/resultTv" android:layout_width="wrap_content" android:text="@string/correct" android:layout_margin="5dip"></TextView>
</LinearLayout>
